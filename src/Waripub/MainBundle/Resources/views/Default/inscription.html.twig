                                <option value="souscripteur">Je suis souscripteur: je désire partager des publicités</option>
                                <option value="partenaire">Je suis partenaire: je désire poster mes publicités </option>
                            </select>
                            -->
                            {{ form_label(form.roles) }}
                            {{ form_widget(form.roles,{'attr': {'class': 'form-control'}}) }}

                            <div class="form-group route-dropdown">
                                {{ form_label(form.username, "Nom d'utilisateur") }}
                                {{ form_widget(form.username,{'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group route-dropdown">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email,{'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group route-dropdown">
