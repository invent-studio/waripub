                                    {{ form_widget(form.nbabonnetwitter,{'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                            <div class="form-group route-dropdown">
                                {{ form_label(form.lieninstagram,"Lien Instagram") }}
                                {{ form_widget(form.lieninstagram,{'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="part-souscripteur">
                                <div class="form-group route-dropdown">
                                    {{ form_label(form.nbabonneinstagram,"Nombre d'abonnés sur Instagram") }}
                                    {{ form_widget(form.nbabonneinstagram,{'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                            <button class="btn btn-primary nextBtn pull-right route-dropdown btn btn-default pull-right" type="button">Suivant</button>
                        </div>

                        <div class="setup-content" id="step-3">
                            <div class="form-group route-dropdown part-partenaire">
                                {{ form_label(form.rccm, "Régime de Commerce") }}
                                {{ form_widget(form.rccm,{'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group route-dropdown">
                                {{ form_label(form.description,"A propos") }}
                                {{ form_widget(form.description,{'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="infos-representant part-partenaire">
                                <hr/>
                                <h3>Informations représentant</h3>
                                <div class="form-group route-dropdown">
                                    {{ form_label(form.nomrepresentant,"Nom et prénoms") }}
                                    {{ form_widget(form.nomrepresentant,{'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group route-dropdown">
                                    {{ form_label(form.telrepresentant,"Téléphone") }}
                                    {{ form_widget(form.telrepresentant,{'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group route-dropdown">
                                    {{ form_label(form.emailrepresentant,"E-mail") }}
                                    {{ form_widget(form.emailrepresentant,{'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <input type="checkbox" name="cgu" required /> J'ai lu et j'accepte les <a href="cgu">conditions générales d'utilisation</a><br>
                            <!--<div class="g-recaptcha route-dropdown " data-sitekey="6LfKURIUAAAAAO50vlwWZkyK_G2ywqE52NU7YO0S" data-callback="verifyRecaptchaCallback"
                                 data-expired-callback="expiredRecaptchaCallback"></div>
                            <br>
                            <button class="btn btn-primary nextBtn pull-right route-dropdown btn btn-default pull-right" type="submit">S'inscrire</button>-->
                            <div>

                                {{ form_widget(form.save,{'attr': {'class': 'btn btn-big btn-success pull-right'}}) }}
                            </div>
                        </div>
                        {{ form_end(form) }}
                        <!-- <div class="g-recaptcha route-dropdown " data-sitekey="6LfKURIUAAAAAO50vlwWZkyK_G2ywqE52NU7YO0S" data-callback="verifyRecaptchaCallback"
