                                    {{ form_widget(form.nbabonnefb,{'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                            <div class="form-group route-dropdown">
                                {{ form_label(form.lientwitter,'Lien Twitter') }}
                                {{ form_widget(form.lientwitter,{'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="part-souscripteur">
