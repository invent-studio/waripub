{% extends 'base.html.twig' %}
{% block title %}
    {% if title is defined %}
        {{ title }}
    {% endif %}
{% endblock %}
{% block stylesheets %}
    <!-- CSS Files ================================================== -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ asset('assets/fonts/font-awesome/css/font-awesome.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ asset('assets/css/style-register.css') }}" type="text/css">
    <!--<link rel="stylesheet" href="{{ asset('assets/css/color.css') }}" type="text/css">-->

{% endblock %}
{% block body %}

    <div class="container">
        <div class="row">
            <div class="form-group col-md-6 col-xs-6">
                {% if activation is defined and error is defined %}
                    {% if activation == true %}
                        <h3 class="alert alert-success">Votre compte est activé avec succès !</h3>
                        <a href="{{ path('login') }}" type="button" class="btn btn-success ">Connectez-vous maintenant</a>
                    {% else %}
                        <h3 class="alert alert-danger">{{ error }}</h3>
                        <a href="{{ path('login') }}" type="button" class="btn btn-success ">Retour à la page d'accueil</a>
                    {% endif %} <!-- Fin if activation -->
                {% endif %} <!-- Fin if defined -->

                {% if succes is defined and form is defined %}
                    {% if succes == true %}
                        <h3 class="alert alert-success">{{ msg }}</h3>
                        <a href="{{ path('login') }}" type="button" class="btn btn-success ">Retour à la page d'accueil</a>
                    {% else %}
